{% block main %}
<ul>
{% for res in resource.node.walk_resources_sorted_by_time() %}
<li>
    {{ render_excerpt(res) }}
</li>
{% endfor %}
</ul>

<script type="text/javascript">
    var disqus_shortname = 'chrisstucchiosblog';

    (function () {
        var s = document.createElement('script'); s.async = true;
        s.type = 'text/javascript';
